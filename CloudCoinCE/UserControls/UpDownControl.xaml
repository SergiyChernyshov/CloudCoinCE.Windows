<UserControl x:Class="CloudCoinCE.UserControls.UpDownControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CloudCoinCE.UserControls"
             mc:Ignorable="d" 
             >
    <Grid>
        <StackPanel Orientation="Horizontal" >
            <StackPanel Orientation="Vertical">
                <Button x:Name="cmdUp" Click="cmdUp_Click"  >
                    <StackPanel>
                        <Image Source="..\Images\up.png" MaxHeight="20" ></Image>

                    </StackPanel>
                </Button>
                <Button x:Name="cmdDown" Click="cmdDown_Click">
                    <StackPanel>
                        <Image Source="..\Images\down.png" MaxHeight="20" ></Image>
                    </StackPanel>
                </Button>
            </StackPanel>
            <Label Content="0" x:Name="lblValue" VerticalAlignment="Center"></Label>
        </StackPanel>  
    </Grid>
</UserControl>
